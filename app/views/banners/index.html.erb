<h1>Listing banners</h1>

<table>
  <tr>
    <th>Headline</th>
    <th>Content</th>
    <th>Secondary banners</th>
    <th>Current State</th>
  </tr>

<% @banners.each do |banner| %>
  <tr>
    <td><%=h banner.headline %></td>
    <td><%=h banner.content %></td>
    <td><%=h banner.secondary_banners %></td>
    <% if banner.active_banner %>
      <td><span class="active">Active</span></td>
    <% else %>
      <td><span class="inactive">Inactive</span></td>
    <% end %>
    <td><%= link_to 'Show', banner %></td>
    <td><%= link_to 'Edit', edit_banner_path(banner) %></td>
    <td><%= link_to 'Destroy', banner, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New banner', new_banner_path %>