<% if @document.keywords
  meta_keywords(@document.keywords)
  end %>
<% if @document.meta_description
  meta_description(@document.meta_description)
  end %>
<% page_title "#{@document.title} " %>

<% content_for :banner do %>
  <%= render :partial => "articles/banner" %>
<% end %>

<%# This is in the application helper %>
<%= render @document %>

<div class="right">
<% if current_user %>
  <%= link_to 'Edit', edit_document_path(@document) %> |
  <%= link_to 'New', new_document_path %> |
<% end %>
<%= link_to "Back", request.env["HTTP_REFERER"] %>
</div>