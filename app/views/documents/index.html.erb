<h1>Listing documents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Document type</th>
    <th>Keywords</th>
    <th>Permalink</th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%=h document.title %></td>
    <td><%=h document.description %></td>
    <td><%=h document.document_type_id %></td>
    <td><%=h document.keywords %></td>
    <td><%=h document.permalink %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New document', new_document_path %>