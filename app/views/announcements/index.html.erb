<%= render :partial => "articles/index_article", :locals => {:articles => @third_party_articles} %>
</div>
<div class="index_list">
  <h2><%= link_to "Press Releases", articles_path(:article_type => "press_release") %></h2>
<%= render :partial => "articles/index_article", :locals => {:articles => @press_releases} %>
</div>
<div class="index_list">
  <h2><%= link_to "Events", events_path %></h2>
<%= render :partial => "events/index_event", :locals => {:events => @events} %>
</div>

