<% page_title("Health Care Press ") %>

<% content_for :banner do %>
  <%= render :partial => 'announcements/banner' %>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => 'layouts/sub_boxes' %>
<% end %>

<div class="index_list">
