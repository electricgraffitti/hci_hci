<div class="resource_article">
  <% article.assets.each do |asset| %>
    <%= link_to image_tag(asset.attachment.url(:thumb), :alt => article.title), article.third_party_url, :target => "_blank" %>
  <% end %>
  <div class="resource_article_wrapper">        
    <h4><%= link_to "#{ article.title}", article.third_party_url, :target => "_blank"  %></h4>
    <%= truncate(article.description, :length => 100) %>
  </div>
</div>