<div class="newsletter_form left">
  <% form_for(newsletter_subscription) do |f| %>
    <%= f.error_messages %>
    <p class="left">
      <%= f.label :email, "Sign Up For Our Newsletter" %><br />
      <%= f.text_field :email %>
    </p>
    <p class="left">
      <%= f.submit 'Sign Up', :class => "btn" %>
    </p>
  <% end %>
</div>