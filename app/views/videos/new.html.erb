<% form_for 'video', :url => upload_new_video_path do |f| %>
    <%= f.hidden_field :auth_sub, :value => params[:token] %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description, :rows => 10 %>

    <%= f.label :category %>
    <%= f.select :category, @categories %>

    <%= f.label :keywords %>
    <%= f.text_field :keywords %>

    <%= f.submit 'Continue to Step 2' %>
  <% end %>
