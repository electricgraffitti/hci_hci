<% form_for(@service, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <div class="grid_6 alpha omega">
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description, :rows => 5, :cols => 29 %>
    </p>
    <p>
      <%= f.label :permalink %><br />
      <%= f.text_field :permalink %>
    </p>
    <p>
      <%= f.label :avatar, "Avatar" %><br/>
      <%= f.file_field :avatar %>
    </p>
  </div>
  <div class="grid_6 alpha omega">
    <p>
      <%= f.label :keywords %><br />
      <%= f.text_field :keywords %>
    </p>
  </div>
  <div class="clear"></div>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>