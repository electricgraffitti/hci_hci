<% @services.each do |serv| %>
  <div class='show_wrap grid_12 alpha omega'>
    <div class='grid_2 alpha '>
      <%= link_to image_tag(serv.avatar.url(:small), :alt => serv.title, :class => "reflect"), service_path(serv) %>
    </div>
    <div class='grid_10 omega'>
      <h3><%= serv.title%>&#8482</h3>
      <p><%= truncate(serv.description, :length => 455) %></p>
    </div>
  <div class="clear"></div>
  <div class="widget_links grid_3 omega right">
  <% if current_user %>
    <%= link_to 'New', new_service_path %> |
    <%= link_to 'Edit', edit_service_path(serv) %> |
  <% end %>
  <%= link_to 'View More', serv %>
  </div>
  </div>
<% end %>