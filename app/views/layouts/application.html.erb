<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <%= render :partial => "layouts/headmeta" %>
</head>
<body class="yui-skin-sam">
  <!-- Application Layout -->
  <div id="wrapper" class="container_16">
  <% unless flash[:notice].nil? %>
    <div id="flash" class="grid_6 round_bottom" style="display: none">
      <%= flash[:notice] %>
    </div>
  <% end %>
	  <div id="hd" class='grid_16 alpha omega'>
      <%= render :partial => "layouts/header" %>
	  </div>
	  <div class="clear"></div>
    <div id="bd" class="grid_16 alpha omega">
      <% if current_user %>
        <%= render :partial => "layouts/admin_nav" %>
      <% end %>
      <% if current_employee %>
        <%= render :partial => "layouts/employee_nav" %>
      <% end %>
      <div id="banner" class="grid_16 alpha omega">
        <%= yield :banner %>
      </div>
      <div class="clear"></div>
      <div class="main_content grid_16 alpha omega">
        <%= yield %>
      </div>
    </div>
    <div id="sub_boxes" class="grid_16 alpha omega">
      <%= yield :sub_boxes %>
    </div>
    <div id="ft" class="grid_16 alpha omega">
      <%= render :partial => "layouts/footer" %>
    </div>
    <div class="clear"></div>
	</div>
	<%= render :partial => "layouts/scripts" %>
</body>
</html>
