<% form_for(@article) do |f| %>
  <%= f.error_messages %>

<div class="grid_5">
  <h4>Article Content</h4>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5, :cols => 28 %>
  </p>
  <p>
    <%= f.label "Choose Article Type" %><br />
    <%= collection_select(:article, :article_type_id, @article_types, :id, :article_type)%>
  </p>
</div>
<div class="grid_5">
  <h4>Article SEO</h4>
  <p>
    <%= f.label :keywords %><br />
    <%= f.text_field :keywords %>
  </p>
  <p>
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </p>
</div>
<div class="grid_5">
  <h3>Article Dependencies</h3>
  <p>
    <%= link_to "Create New Article Type", new_article_path %>
  </p>
  <p>
    <h4>Article Types Available</h4>
    <ul>
      <% for article_type in @article_types %>
      <li><%= article_type.article_type %></li>
      <% end %>
    </ul>
  </p>
</div>
<div class="clear"></div>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>