<h1>Listing tickets</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Description</th>
    <th>Due date</th>
    <th>Statud</th>
    <th>Priority</th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%=h ticket.subject %></td>
    <td><%= ticket.description %></td>
    <td><%=h ticket.due_date %></td>
    <td><%=h ticket.ticket_status.status_type %></td>
    <td><%=h ticket.priority.priority_type %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Destroy', ticket, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ticket', new_ticket_path %>