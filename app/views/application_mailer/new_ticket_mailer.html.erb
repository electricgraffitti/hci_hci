<%
  @ticket_subject = @params[:ticket][:subject]
  @ticket_description = @params[:ticket][:description]
  @ticket_duedate = @params[:ticket][:due_date]
%>

<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <style type="text/css" media="screen">
      h3 { color: #f00; }
      ul { list-style-type: none; }
      li { list-style-type: none; }
      p  { margin: 1px;}
    </style>
</head>
<body>
  <h3>HCInsight.com :: Employee Ticket System</h3>
  <h4>Ticket: <%= @ticket_subject %></h4>
  <ul>
    <li>From: <%= @owner.fullname %></li>
  </ul>
  <p>
  <h4>Ticket Goal:</h4>
    <%= @ticket_description %><br/>
    <small>Due Date: <%= @ticket_duedate %> - Status: <%= @status.status_name %> - Priority: <%= @priority.priority_name %></small>
  </p>
  <p>
  <h4>Assigned To:</h4>
    <ul>
      <% @employees.each do |employee| %>
        <li><%= employee.fullname %></li>
      <% end %>
    <ul>
  </p>
</body>
</html>